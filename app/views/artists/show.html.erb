<h2><%= @artist.name %> <%= link_to "(edit)", edit_artist_path(@artist) %></h2>
<h4><%= @artist.nationality %></h4>

<%= image_tag @artist.photo_url, class: "artist-photo", alt: @artist.name %>

<h3>Songs <%= link_to "(+)", new_song_path %>

<ul>
  <% @artist.songs.each do |song| %>
    <li>
    <%= link_to "#{song.title} (#{song.album})", song_path(song) %>
    </li>
  <% end %>
</ul>
